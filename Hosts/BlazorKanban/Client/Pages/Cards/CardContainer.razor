@attribute [Authorize]

@if (Card == null)
{
    <Loading></Loading>
}
else
{
    <MatCard Class="card-block">
        <MatCardContent Class="p-3">
            <MatHeadline6>
                @Card.Title
            </MatHeadline6>

            <MatBody2>
                @Card.Description
            </MatBody2>

            <MatCardActions>
                <MatCardActionButtons>
                    <MatButton Icon="@MatIconNames.Edit">Edit</MatButton>
                </MatCardActionButtons>
            </MatCardActions>
        </MatCardContent>
    </MatCard>
}

@code {
    [Parameter]
    public Card Card { get; set; }
}