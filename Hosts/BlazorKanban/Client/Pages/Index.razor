@code {

    bool showModal = false;

    public string ModalDisplay = "none;";
    public string ModalClass = "";

    public void ModalOpen()
    {
        ModalDisplay = "block;";
        ModalClass = "show";
        showModal = true;
        StateHasChanged();
    }

    public void ModalClose()
    {
        ModalDisplay = "none;";
        ModalClass = "";
        showModal = false;
        StateHasChanged();
    }

    void ModalOk()
    {
        Console.WriteLine("Modal ok");
        showModal = false;
    }
